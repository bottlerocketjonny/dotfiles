# i3status configuration file.

general {
    output_format = "i3bar"
    colors = true
    interval = 5
}

order += "disk /"
order += "load"
order += "memory"
order += "volume master"
order += "battery 0"
order += "time"

# Disk Usage (for root directory)
disk "/" {
    format = " Disk: %free "
}

# CPU Load
load {
    format = " Load: %1min "
}

# Memory Usage
memory {
    format = " Mem: %used/%total "
    threshold_degraded = "2G"
    format_degraded = " MEM: %used/%total (HIGH) "
}

volume master {
    format = " â™ª: %volume "
    format_muted = " â™ª: muted (%volume) "
}

battery 0 {
    format = " %status %percentage %remaining %emptytime "
    format_down = "No battery"
    status_chr = "âš¡ CHR"
    status_bat = "ðŸ”‹ BAT"
    status_unk = "? UNK"
    status_full = "â˜» FULL"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}

# Time and Date
time {
    format = " %Y-%m-%d %H:%M:%S "
}

